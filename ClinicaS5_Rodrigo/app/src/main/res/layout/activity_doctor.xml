<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgDoctorProfile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor"
                android:contentDescription="Imagen del doctor" />

            <TextView
                android:id="@+id/txtDoctorNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Nombre Apellido"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtDoctorEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialista en X"
                android:textColor="#616161"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <!-- Aquí agrego el celular -->
            <TextView
                android:id="@+id/txtDoctorCelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celular: 987654321"
                android:textColor="#424242"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Aquí agrego el horario -->
            <TextView
                android:id="@+id/txtDoctorHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: 08:00 - 14:00"
                android:textColor="#424242"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
